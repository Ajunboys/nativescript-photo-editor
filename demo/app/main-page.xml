<Page xmlns="http://schemas.nativescript.org/tns.xsd" navigatingTo="navigatingTo" class="page">
    <Page.actionBar>
        <ActionBar title="Photo Editor" icon="" class="action-bar">
        </ActionBar>
    </Page.actionBar>

    <GridLayout rows="*, auto, *">
        <Image id="orig-image" row="0" src="~/test-image.jpg" stretch="aspectFit" />
        <Button row="1" class="btn btn-primary btn-rounded-sm" tap="editImage" text="Edit Image" />
        <Image id="result-image" class="m-b-5" row="2" stretch="aspectFit" />
    </GridLayout>
</Page>
